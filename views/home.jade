extends layout

block content
	div.container
		div.row
			div.col-sm-6.col-md-4.col-md-offset-4
				#user
					h1.text-center.login-title Добро пожаловать #{user.firstName} !
					h1.login-title
						div.signup-wall
							ul.user-details
								li Ник : #{user.username}
								li Почта    : #{user.email}
								li Имя : #{user.firstName}
								li Фамилия : #{user.lastName}
								li ID : #{user._id}
							a(href='/signout', class='text-center new-account') Выйти
				#music
					div.signup-wall
						ul.user-details.login-title
							li
							a(href='/upload', class='text-center new-account') Управление песнями
							a(href='/playlist', class='text-center new-account') Управление плейлистами